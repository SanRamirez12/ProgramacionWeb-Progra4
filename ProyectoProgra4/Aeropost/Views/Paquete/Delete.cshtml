@using System.Globalization
@model Aeropost.Models.Paquete

@{
    ViewData["Title"] = "Eliminar paquete";
    var us = CultureInfo.CreateSpecificCulture("en-US"); // $ y punto decimal
    var nombreCliente = ViewBag.ClienteNombre as string ?? "—";
}

<h1 class="mb-3">Eliminar paquete</h1>

<div class="alert alert-warning">
    <strong>¿Está seguro que desea eliminar este paquete?</strong>
</div>

<!-- Resumen estilo "reporte por cliente" -->
<div class="card shadow-sm mb-3">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <h5 class="mb-1">Cliente</h5>
                <div><strong>Nombre:</strong> @nombreCliente</div>
                <div><strong>Cédula:</strong> @Model.ClienteAsociado</div>
            </div>
            <div class="col-md-6">
                <h5 class="mb-1">Resumen</h5>
                <div><strong>Peso (lb):</strong> @Model.Peso.ToString("N2", us)</div>
                <div><strong>Valor bruto ($):</strong> @Model.ValorTotalBruto.ToString("C2", us)</div>
                <div><strong>Condición especial:</strong> @(Model.CondicionEspecial ? "Sí" : "No")</div>
                <div><strong>Fecha de registro:</strong> @Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</div>
            </div>
        </div>
    </div>
</div>

<!-- Tabla con el paquete (1 fila) -->
<div class="card shadow-sm mb-3">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Número de Tracking</th>
                        <th class="text-end">Peso (lb)</th>
                        <th class="text-end">Valor Bruto ($)</th>
                        <th>Tienda</th>
                        <th>Especial</th>
                        <th>Fecha Registro</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.NumeroTracking</td>
                        <td class="text-end">@Model.Peso.ToString("N2", us)</td>
                        <td class="text-end">@Model.ValorTotalBruto.ToString("C2", us)</td>
                        <td>@Model.TiendaOrigen</td>
                        <td>@(Model.CondicionEspecial ? "Sí" : "No")</td>
                        <td>@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Formulario de confirmación -->
<form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-flex gap-2">
    @Html.AntiForgeryToken()

    <!--  Id oculto  -->
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">
        Eliminar
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        Volver
    </a>
</form>
