@model IEnumerable<Aeropost.Models.Paquete>

@{
    ViewData["Title"] = "Paquetes";
}

<h1>Listado de Paquetes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar nuevo paquete</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Peso (lb)</th>
            <th>Valor Total Bruto</th>
            <th>Tienda de Origen</th>
            <th>Condición Especial</th>
            <th>Fecha de Registro</th>
            <th>Cliente Asociado (Cédula)</th>
            <th>Número de Tracking</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Peso</td>
                <td>@item.ValorTotalBruto</td>
                <td>@item.TiendaOrigen</td>
                <td>@(item.CondicionEspecial ? "Sí" : "No")</td>
                <td>@item.FechaRegistro</td>
                <td>@item.ClienteAsociado</td>
                <td>@item.NumeroTracking</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Ver reporte", "ReportePorCliente", new { cedula = item.ClienteAsociado })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }) 
                </td>
            </tr>
        }
    </tbody>
</table>
