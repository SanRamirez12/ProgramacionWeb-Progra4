@model IEnumerable<Aeropost.Models.Paquete>

@{
    ViewData["Title"] = "Lista de Paquetes";
}

<h2 class="mb-4">Lista de Paquetes</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Registrar nuevo paquete</a>
</div>

<table class="table table-bordered table-hover text-center align-middle">
    <thead class="table-primary">
        <tr>
            <th>Peso (lb)</th>
            <th>Valor Total Bruto</th>
            <th>Tienda de Origen</th>
            <th>Condición Especial</th>
            <th>Fecha de Registro</th>
            <th>Cliente Asociado</th>
            <th>Número de Tracking</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Peso</td>
                <td>@item.ValorTotalBruto</td>
                <td>@item.TiendaOrigen</td>
                <td>
                    @if (item.CondicionEspecial)
                    {
                        <span class="text-success fw-bold">✔</span>
                    }
                    else
                    {
                        <span class="text-danger fw-bold">✘</span>
                    }
                </td>
                <td>@item.FechaRegistro.ToString("dd/MM/yyyy")</td>
                <td>@item.ClienteAsociado</td>
                <td>@item.NumeroTracking</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Ver reporte</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
