@using System.Globalization
@model IEnumerable<Aeropost.Models.Paquete>

@{
    ViewData["Title"] = "Lista de Paquetes";
    var us = CultureInfo.CreateSpecificCulture("en-US"); // formato con $ y punto decimal
}

<h2 class="mb-4">Lista de Paquetes</h2>

<div class="d-flex flex-wrap gap-2 mb-3">
    <a asp-action="Create" class="btn btn-primary">Registrar nuevo paquete</a>

    <!-- Botón único para ir al reporte por cédula -->
    <a asp-action="ReportePorCliente" class="btn btn-outline-primary">
        Reporte de paquetes
    </a>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-warning">@TempData["Mensaje"]</div>
}

<table class="table table-bordered table-hover text-center align-middle">
    <thead class="table-primary">
        <tr>
            <th>Peso (lb)</th>
            <th>Valor Total Bruto ($)</th>
            <th>Tienda de Origen</th>
            <th>Condición Especial</th>
            <th>Fecha de Registro</th>
            <th>Cliente Asociado</th>
            <th>Número de Tracking</th>
            <th style="width: 200px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Peso.ToString("N2", us)</td>
                    <td>@item.ValorTotalBruto.ToString("C2", us)</td>
                    <td>@item.TiendaOrigen</td>
                    <td>
                        @if (item.CondicionEspecial)
                        {
                            <span class="text-success fw-bold">Sí</span>
                        }
                        else
                        {
                            <span class="text-danger fw-bold">No</span>
                        }
                    </td>
                    <td>@item.FechaRegistro.ToString("dd/MM/yyyy")</td>
                    <td>@item.ClienteAsociado</td>
                    <td>@item.NumeroTracking</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-muted">No hay paquetes registrados.</td>
            </tr>
        }
    </tbody>
</table>
