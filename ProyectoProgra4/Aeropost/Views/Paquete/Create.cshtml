@model Aeropost.Models.Paquete

@{
    ViewData["Title"] = "Crear paquete";
}

<h1>Crear paquete</h1>

<h4>Paquete</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* ID oculto: no se muestra ni se edita (autoincremental en BD). 
               Si tuvieras un hidden por algún motivo, podrías usar:
               <input type="hidden" asp-for="Id" />
            *@

            <div class="form-group mb-3">
                <label asp-for="Peso" class="form-label"></label>
                <input asp-for="Peso" class="form-control" type="number" step="0.01" min="0" required placeholder="Ingrese el peso en lb" />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ValorTotalBruto" class="form-label"></label>
                <input asp-for="ValorTotalBruto" class="form-control" type="number" step="0.01" min="0" required placeholder="Ingrese el valor total bruto" />
                <span asp-validation-for="ValorTotalBruto" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TiendaOrigen" class="form-label"></label>
                <select asp-for="TiendaOrigen" class="form-select" required>
                    <option value="" selected disabled>Seleccione la tienda de origen</option>
                    <option>Amazon</option>
                    <option>Shein</option>
                    <option>Temu</option>
                    <option>eBay</option>
                    <option>AliExpress</option>
                </select>
                <span asp-validation-for="TiendaOrigen" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label d-block">¿Condición especial?</label>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="CondicionEspecial" value="true" required />
                    <label class="form-check-label">Sí</label>
                </div>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="CondicionEspecial" value="false" required />
                    <label class="form-check-label">No</label>
                </div>

                <span asp-validation-for="CondicionEspecial" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FechaRegistro" class="form-label"></label>
                <input asp-for="FechaRegistro" class="form-control" type="datetime-local" required placeholder="Seleccione la fecha y hora de registro" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label class="form-label" for="CedulaCliente">Cédula (Cliente asociado)</label>
                <input id="CedulaCliente" name="ClienteAsociado" class="form-control" required placeholder="Ingrese la cédula del cliente asociado" />
                <span asp-validation-for="ClienteAsociado" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Crear</button>
                <button type="reset" class="btn btn-secondary">Cancelar</button>
                <a asp-action="Index" class="btn btn-link">Volver al listado</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


