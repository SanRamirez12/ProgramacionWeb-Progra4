@model Aeropost.Models.Paquete

@{
    ViewData["Title"] = "Editar Paquete";
}

<h2 class="mb-4">Editar Paquete</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <!--Debe postear a Edit y por POST -->
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <!-- Necesarios para que el POST reciba el Id y conserve el tracking anterior -->
            <input asp-for="Id" type="hidden" />
            <input asp-for="NumeroTracking" type="hidden" />

            <div class="mb-3">
                <label asp-for="Peso" class="form-label fw-bold"></label>
                <input asp-for="Peso" class="form-control" placeholder="Ingrese el peso en lb" />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ValorTotalBruto" class="form-label fw-bold"></label>
                <input asp-for="ValorTotalBruto" class="form-control" placeholder="Ingrese el valor total bruto" />
                <span asp-validation-for="ValorTotalBruto" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TiendaOrigen" class="form-label fw-bold"></label>
                <select asp-for="TiendaOrigen" class="form-select">
                    <option value="">Seleccione la tienda de origen</option>
                    <option value="Amazon">Amazon</option>
                    <option value="eBay">eBay</option>
                    <option value="AliExpress">AliExpress</option>
                    <option value="Temu">Temu</option>
                    <option value="Shein">Shein</option>
                </select>
                <span asp-validation-for="TiendaOrigen" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CondicionEspecial" class="form-label fw-bold"></label>
                <div>
                    <input type="radio" asp-for="CondicionEspecial" value="true" id="espSi" /> <label for="espSi">Sí</label>
                    <input type="radio" asp-for="CondicionEspecial" value="false" id="espNo" class="ms-3" /> <label for="espNo">No</label>
                </div>
                <span asp-validation-for="CondicionEspecial" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FechaRegistro" class="control-label"></label>
                <input asp-for="FechaRegistro" class="form-control" type="date" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ClienteAsociado" class="form-label fw-bold">Cédula del Cliente</label>
                <input asp-for="ClienteAsociado" class="form-control" placeholder="Ingrese la cédula del cliente asociado" />
                <span asp-validation-for="ClienteAsociado" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                <button type="submit" class="btn btn-success">Guardar cambios</button>
            </div>
        </form>
    </div>
</div>
