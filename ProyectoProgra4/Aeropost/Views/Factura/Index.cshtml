@model IEnumerable<Aeropost.Models.Factura>
@{
    ViewData["Title"] = "Facturas";
    var us = System.Globalization.CultureInfo.CreateSpecificCulture("en-US"); // formato $ y punto decimal
}

<div class="bitacora-container">
    <!-- Sección de bienvenida -->
    <div class="welcome-section">
        <h1 class="welcome-title">Lista de Facturas</h1>
    </div>

    <!-- Contenido principal -->
    <div class="main-content-card">
        <!-- Botones de acción -->
        <div class="action-buttons">
            <a asp-action="Create" class="btn-track">
                
                Facturar
            </a>
            <a asp-action="ReporteMensual" class="btn-track">
                
                Reporte Mensual
            </a>
            <a asp-action="PorCedula" class="btn-track">
                
                Buscar por Cédula
            </a>
            <a asp-action="PorTracking" class="btn-track">
                
                Buscar por Tracking
            </a>
        </div>

        <!-- Tabla de facturas -->
        <div class="table-container">
            <table class="data-table">
                <thead class="table-header">
                    <tr>
                        <th>Número de Tracking</th>
                        <th>Cédula del Cliente</th>
                        <th>Peso (lb)</th>
                        <th>Valor Total del Paquete ($)</th>
                        <th>Producto Especial</th>
                        <th>Fecha de Entrega</th>
                        <th>Monto Total ($)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-row">
                            <td>@item.NumeroTracking</td>
                            <td>@item.CedulaCliente</td>
                            <td>@item.Peso.ToString("N2", us)</td>
                            <td>@item.ValorTotalPaquete.ToString("C2", us)</td>
                            <td>
                                @if (item.EsProductoEspecial)
                                {
                                    <span class="badge-yes">Sí</span>
                                }
                                else
                                {
                                    <span class="badge-no">No</span>
                                }
                            </td>
                            <td>@item.FechaEntrega.ToString("dd/MM/yyyy")</td>
                            <td class="amount-total">@item.MontoTotal.ToString("C2", us)</td>
                            <td>
                                <div class="action-buttons-row">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-details">Ver</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-edit">Editar</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-delete">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div></table>
