@using System.Globalization
@model Aeropost.Models.Factura

@{
    ViewData["Title"] = "Detalle de factura";
    var us = CultureInfo.CreateSpecificCulture("en-US"); // $ y punto decimal
    var cli = ViewBag.Cliente as Aeropost.Models.Cliente; // viene del controlador
}

<h1 class="mb-3">Detalle de factura</h1>

<div class="d-flex gap-2 mb-3">
    <a asp-action="Index" class="btn btn-secondary">
        Ir al listado de facturas
    </a>
</div>

<!-- Cliente -->
<div class="card shadow-sm mb-3">
    <div class="card-body">
        <h5 class="mb-3">Cliente</h5>
        <div class="row g-3">
            <div class="col-md-6">
                <div><strong>Nombre:</strong> @(cli?.Nombre ?? "—")</div>
                <div><strong>Cédula:</strong> @Model.CedulaCliente</div>
                <div><strong>Correo:</strong> @(cli?.Correo ?? "—")</div>
            </div>
            <div class="col-md-6">
                <div><strong>Teléfono:</strong> @(cli?.Telefono ?? "—")</div>
                <div><strong>Dirección:</strong> @(cli?.Direccion ?? "—")</div>
                <div><strong>Tipo:</strong> @(cli?.Tipo ?? "—")</div>
            </div>
        </div>
    </div>
</div>

<!-- Factura (resumen compacto) -->
<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">
            <div>
                <h5 class="mb-1">Factura</h5>
                <div class="text-muted">Fecha de entrega: @Model.FechaEntrega.ToString("dd/MM/yyyy")</div>
            </div>
            <div>
                <span class="badge bg-dark fs-6">Tracking: @Model.NumeroTracking</span>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-md-4">
                <div class="border rounded p-3 h-100">
                    <div class="text-muted small">Monto total ($)</div>
                    <div class="fs-4 fw-semibold">@Model.MontoTotal.ToString("C2", us)</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="border rounded p-3 h-100">
                    <div class="text-muted small">Peso (lb)</div>
                    <div class="fs-4 fw-semibold">@Model.Peso.ToString("N2", us)</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="border rounded p-3 h-100">
                    <div class="text-muted small">Valor del paquete ($)</div>
                    <div class="fs-4 fw-semibold">@Model.ValorTotalPaquete.ToString("C2", us)</div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <span class="badge @(Model.EsProductoEspecial ? "bg-danger" : "bg-success")">
                @(Model.EsProductoEspecial ? "Con producto especial" : "Sin producto especial")
            </span>
        </div>
    </div>
</div>

