@using System.Globalization
@model Aeropost.Models.Factura

@{
    ViewData["Title"] = "Cancelar factura";
    var us = CultureInfo.CreateSpecificCulture("en-US");
    var cli = ViewBag.Cliente as Aeropost.Models.Cliente;   // puede venir null
}

<h1 class="mb-3">Cancelar factura</h1>

<div class="alert alert-warning mb-3">
    <strong>Confirmación requerida:</strong> Esta acción no se puede deshacer.
</div>

<!-- Cliente -->
<div class="card shadow-sm mb-3">
    <div class="card-body">
        <h5 class="mb-2">Cliente</h5>

        @if (cli != null)
        {
            <div class="row">
                <div class="col-md-6">
                    <div><strong>Nombre:</strong> @cli.Nombre</div>
                    <div><strong>Cédula:</strong> @cli.Cedula</div>
                    <div><strong>Correo:</strong> @cli.Correo</div>
                </div>
                <div class="col-md-6">
                    <div><strong>Teléfono:</strong> @cli.Telefono</div>
                    <div><strong>Dirección:</strong> @cli.Direccion</div>
                    <div><strong>Tipo:</strong> @cli.Tipo</div>
                </div>
            </div>
        }
        else
        {
            <div><strong>Cédula:</strong> @Model.CedulaCliente</div>
        }
    </div>
</div>

<!-- Factura -->
<div class="card shadow-sm mb-3">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-2">
            <h5 class="mb-0">Factura</h5>
            <span class="badge text-bg-dark">Tracking: @Model.NumeroTracking</span>
        </div>

        <div class="row g-3">
            <div class="col-md-4">
                <div class="border rounded p-3">
                    <div class="text-muted">Monto total ($)</div>
                    <div class="fs-5 fw-semibold">@Model.MontoTotal.ToString("C2", us)</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="border rounded p-3">
                    <div class="text-muted">Peso (lb)</div>
                    <div class="fs-5 fw-semibold">@Model.Peso.ToString("N2", us)</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="border rounded p-3">
                    <div class="text-muted">Valor del paquete ($)</div>
                    <div class="fs-5 fw-semibold">@Model.ValorTotalPaquete.ToString("C2", us)</div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <span class="badge @(Model.EsProductoEspecial ? "bg-danger" : "bg-success")">
                @(Model.EsProductoEspecial ? "Con producto especial" : "Sin producto especial")
            </span>
            <span class="ms-3 text-muted">
                <strong>Fecha de entrega:</strong> @Model.FechaEntrega.ToString("dd/MM/yyyy")
            </span>
        </div>
    </div>
</div>

<!-- Confirmación -->
<form asp-action="Delete" method="post" class="mt-2">
    @Html.AntiForgeryToken()
    <!-- Id oculto (mantiene compatibilidad con tu POST actual) -->
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger me-2">
        Eliminar
    </button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
