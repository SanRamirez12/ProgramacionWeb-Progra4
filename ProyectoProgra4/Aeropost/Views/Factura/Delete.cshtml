@using System.Globalization
@model Aeropost.Models.Factura
@{
    ViewData["Title"] = "Cancelar factura";
    var us = CultureInfo.CreateSpecificCulture("en-US");
    var cli = ViewBag.Cliente as Aeropost.Models.Cliente;   // puede venir null
}

<!-- Contenedor principal usando tus estilos existentes -->
<div class="delete-container">

    <!-- Encabezado con título y alerta -->
    <div class="delete-header">
        <h1 class="section-title">Cancelar factura</h1>

        <!-- Alerta de advertencia usando tu clase personalizada -->
        <div class="alert-warning">
            <div class="alert-icon">⚠️</div>
            <div class="alert-content">
                <strong>Confirmación requerida</strong>
                <p class="alert-subtitle">Esta acción no se puede deshacer y eliminará permanentemente la factura del sistema.</p>
            </div>
        </div>
    </div>

    <!-- Información del cliente usando tu sistema de tarjetas -->
    <div class="client-info-card">
        <div class="card-header">
            <h2 class="card-title">Información del Cliente</h2>
        </div>

        <div class="info-grid">
            <div class="info-section">
                <h3 class="subsection-title">👤 Datos Personales</h3>
                <div class="info-details">
                    @if (cli != null)
                    {
                        <div class="info-item">
                            <span class="info-label">Nombre:</span>
                            <span class="info-value">@cli.Nombre</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Cédula:</span>
                            <span class="info-value">@cli.Cedula</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Correo:</span>
                            <span class="info-value">@cli.Correo</span>
                        </div>
                    }
                    else
                    {
                        <div class="info-item">
                            <span class="info-label">Cédula:</span>
                            <span class="info-value">@Model.CedulaCliente</span>
                        </div>
                    }
                </div>
            </div>

            @if (cli != null)
            {
                <div class="info-section">
                    <h3 class="subsection-title">📞 Contacto</h3>
                    <div class="info-details">
                        <div class="info-item">
                            <span class="info-label">Teléfono:</span>
                            <span class="info-value">@cli.Telefono</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Dirección:</span>
                            <span class="info-value">@cli.Direccion</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Tipo:</span>
                            <span class="info-value">
                                <span class="type-badge type-@cli.Tipo.ToLower()">@cli.Tipo</span>
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Información de la factura -->
    <div class="client-info-card">
        <div class="card-header">
            <h2 class="card-title">Detalles de la Factura</h2>
            <div class="count-badge">Tracking: @Model.NumeroTracking</div>
        </div>

        <!-- Grid de información financiera -->
        <div class="info-grid">
            <div class="info-section">
                <h3 class="subsection-title">💰 Información Financiera</h3>
                <div class="info-details">
                    <div class="info-item">
                        <span class="info-label">Monto Total:</span>
                        <span class="info-value amount-total">@Model.MontoTotal.ToString("C2", us)</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Valor Paquete:</span>
                        <span class="info-value">@Model.ValorTotalPaquete.ToString("C2", us)</span>
                    </div>
                </div>
            </div>

            <div class="info-section">
                <h3 class="subsection-title">📦 Detalles del Paquete</h3>
                <div class="info-details">
                    <div class="info-item">
                        <span class="info-label">Peso:</span>
                        <span class="info-value">@Model.Peso.ToString("N2", us) lb</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Fecha Entrega:</span>
                        <span class="info-value">@Model.FechaEntrega.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Producto Especial:</span>
                        <span class="info-value">
                            @if (Model.EsProductoEspecial)
                            {
                                <span class="badge-yes">Sí</span>
                            }
                            else
                            {
                                <span class="badge-no">No</span>
                            }
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Acciones de eliminación -->
    <div class="delete-actions">
        <form asp-action="Delete" method="post" class="delete-form">
            @Html.AntiForgeryToken()
            <!-- Id oculto (mantiene compatibilidad con tu POST actual) -->
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="hidden" asp-for="Id" />

            <div class="form-actions">
                <button type="submit" class="btn-delete">
                    <span class="btn-icon">🗑️</span>
                    Eliminar Factura
                </button>
                <a asp-action="Index" class="btn-cancel">
                    <span class="btn-icon">↩️</span>
                    Volver a Lista
                </a>
            </div>
        </form>
    </div>
</div>