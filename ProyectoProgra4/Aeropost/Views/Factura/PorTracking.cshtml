@using System.Globalization
@model Aeropost.Models.Factura

@{
    ViewData["Title"] = "Factura por tracking";
    var us = CultureInfo.CreateSpecificCulture("en-US");  // $ y punto decimal
    var tracking = (string)(ViewBag.Tracking ?? Context.Request.Query["tracking"].ToString());
    var tieneTracking = !string.IsNullOrWhiteSpace(tracking);
}

<!-- Contenedor principal usando el diseño existente -->
<div class="clientes-container">
    <div class="clientes-wrapper">
        <!-- Título con estilo moderno -->
        <h1 class="clientes-title">Facturas por Tracking</h1>

        <!-- Formulario de búsqueda -->
        <div class="modern-card">
            <div class="modern-card-body">
                <form asp-action="PorTracking" method="get" class="client-form">
                    <div class="form-grid">
                        <div class="form-group">
                            <label for="tracking" class="form-label">
                                Número de Tracking
                            </label>
                            <input type="text"
                                   id="tracking"
                                   name="tracking"
                                   value="@(tieneTracking ? tracking : string.Empty)"
                                   class="form-input"
                                   placeholder="AL0825MIA17647"
                                   required />
                            <div style="color: #6b7280; font-size: 0.875rem; margin-top: 0.25rem;">
                                Digite el tracking y presione "Buscar".
                            </div>
                        </div>
                        <div class="form-group" style="display: flex; align-items: flex-end; gap: 1rem;">
                            <button type="submit" class="btn-modern-primary" style="flex: 1;">
                                Buscar
                            </button>
                            <a asp-controller="Factura" asp-action="Index" class="btn-modern-secondary" style="flex: 1;">
                                Volver
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @if (tieneTracking && Model != null)
        {
            <!-- Resumen del Cliente y Factura -->
            <div class="modern-card" style="margin-bottom: 2rem; background: rgba(96, 165, 250, 0.05);">
                <div class="modern-card-body">
                    <div class="form-grid">
                        <div class="form-group">
                            <h5 style="color: #1e3a8a; margin-bottom: 1rem; font-weight: 600;">Información del Cliente</h5>
                            <div style="margin-bottom: 0.5rem;">
                                <strong>Nombre:</strong> @(ViewBag.ClienteNombre ?? "—")
                            </div>
                            <div>
                                <strong>Cédula:</strong> @Model.CedulaCliente
                            </div>
                        </div>
                        <div class="form-group">
                            <h5 style="color: #1e3a8a; margin-bottom: 1rem; font-weight: 600;">Datos de la Factura</h5>
                            <div style="margin-bottom: 0.5rem;">
                                <strong>Tracking:</strong> @Model.NumeroTracking
                            </div>
                            <div style="margin-bottom: 0.5rem;">
                                <strong>Fecha de entrega:</strong> @Model.FechaEntrega.ToString("dd/MM/yyyy")
                            </div>
                            <div>
                                <strong>Monto total:</strong> <span style="color: #059669; font-weight: 600;">@Model.MontoTotal.ToString("C2", us)</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tabla de Resultados -->
            <div class="modern-card">
                <div class="modern-card-body" style="padding: 0;">
                    <div style="overflow-x: auto;">
                        <table class="modern-table" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th style="text-align: left;">Fecha de Entrega</th>
                                    <th style="text-align: left;">Cédula</th>
                                    <th style="text-align: left;">Tracking</th>
                                    <th style="text-align: right;">Peso (lb)</th>
                                    <th style="text-align: right;">Valor Bruto</th>
                                    <th style="text-align: center;">Especial</th>
                                    <th style="text-align: right;">Monto Total</th>
                                    <th style="text-align: center; width: 300px;">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.FechaEntrega.ToString("dd/MM/yyyy")</td>
                                    <td>@Model.CedulaCliente</td>
                                    <td>@Model.NumeroTracking</td>
                                    <td style="text-align: right;">@Model.Peso.ToString("N2", us)</td>
                                    <td style="text-align: right; font-weight: 600; color: #059669;">@Model.ValorTotalPaquete.ToString("C2", us)</td>
                                    <td style="text-align: center;">
                                        @if (Model.EsProductoEspecial)
                                        {
                                            <span style="background: linear-gradient(135deg, #f59e0b, #d97706); color: white; padding: 0.25rem 0.75rem; border-radius: 12px; font-size: 0.75rem; font-weight: 500;">Sí</span>
                                        }
                                        else
                                        {
                                            <span style="background: #e5e7eb; color: #6b7280; padding: 0.25rem 0.75rem; border-radius: 12px; font-size: 0.75rem; font-weight: 500;">No</span>
                                        }
                                    </td>
                                    <td style="text-align: right; font-weight: 600; color: #059669;">@Model.MontoTotal.ToString("C2", us)</td>
                                    <td style="text-align: center;">
                                        <div style="display: flex; gap: 0.5rem; justify-content: center; flex-wrap: wrap;">
                                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn-modern-primary" style="padding: 0.5rem 1rem; font-size: 0.875rem;">
                                                Detalles
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-action-edit">
                                                Editar
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn-action-delete">
                                                Eliminar
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else if (tieneTracking)
        {
            <div class="modern-card">
                <div class="modern-card-body" style="text-align: center; padding: 3rem 2rem;">
                    <p style="color: #6b7280; font-size: 1.125rem; margin: 0;">
                        No se encontró una factura con ese tracking.
                    </p>
                </div>
            </div>
        }
    </div>
</div>