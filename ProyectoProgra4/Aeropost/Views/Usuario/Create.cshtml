@model Aeropost.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<h1>Crear Usuario</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Id oculto -->
            <input type="hidden" asp-for="Id" />

            <!-- Nombre -->
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre completo" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <!-- Cédula -->
            <div class="form-group">
                <label asp-for="Cedula" class="control-label">Cédula</label>
                <input asp-for="Cedula" class="form-control" type="number" placeholder="Ingrese la cédula" required />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>

            <!-- Género -->
            <div class="form-group">
                <label>Género</label><br />
                <input type="radio" asp-for="Genero" value="Masculino" required /> Masculino
                <input type="radio" asp-for="Genero" value="Femenino" required /> Femenino
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>

            <!-- Fecha de Registro -->
            <div class="form-group">
                <label asp-for="FechaRegistro" class="control-label">Fecha de Registro</label>
                <input asp-for="FechaRegistro" class="form-control" type="date" required />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>

            <!-- Estado -->
            <div class="form-group">
                <label>Estado</label><br />
                <input type="radio" asp-for="Estado" value="Activo" required /> Activo
                <input type="radio" asp-for="Estado" value="Inactivo" required /> Inactivo
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <!-- Correo -->
            <div class="form-group">
                <label asp-for="Correo" class="control-label">Correo</label>
                <input asp-for="Correo" class="form-control" type="email" placeholder="ejemplo@correo.com" required />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <!-- Username -->
            <div class="form-group">
                <label asp-for="Username" class="control-label">Usuario</label>
                <input asp-for="Username" class="form-control" placeholder="Nombre de usuario" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>


            <!-- Password -->
            <div class="form-group">
                <label asp-for="Password" class="control-label">Contraseña</label>
                <input asp-for="Password" class="form-control" type="password" required placeholder="Ingrese la contraseña" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password (no está en el modelo) -->
            <div class="form-group">
                <label for="ConfirmPassword" class="control-label">Confirmar Contraseña</label>
                <input id="ConfirmPassword" name="ConfirmPassword" class="form-control"
                       type="password" required placeholder="Repita la contraseña" />
                <span class="text-danger">
                    @ViewData.ModelState["ConfirmPassword"]?.Errors.FirstOrDefault()?.ErrorMessage
                </span>
            </div>


            <!-- Botones -->
            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <input type="reset" value="Cancelar" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Volver a la Lista</a>
</div>



