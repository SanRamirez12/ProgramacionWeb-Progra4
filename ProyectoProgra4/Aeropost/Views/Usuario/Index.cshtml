@model IEnumerable<Aeropost.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h1>Listado de usuarios</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar nuevo usuario</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Cédula</th>
            <th>Género</th>
            <th>Fecha de registro</th>
            <th>Estado</th>
            <th>Correo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Cedula</td>
                <td>@item.Genero</td>
                <td>@item.FechaRegistro.ToShortDateString()</td>
                <td>@item.Estado</td>
                <td>@item.Correo</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>


