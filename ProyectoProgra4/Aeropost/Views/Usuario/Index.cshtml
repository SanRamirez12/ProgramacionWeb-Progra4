@model IEnumerable<Aeropost.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios</h1>

<div class="mb-3 d-flex justify-content-between">
        <a asp-action="Create" class="btn btn-success">Agregar usuario</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Cédula</th>
            <th>Género</th>
            <th>Fecha de registro</th>
            <th>Estado</th>
            <th>Correo</th>
            <th>Username</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Cedula</td>
                <td>@item.Genero</td>
                <td>@item.FechaRegistro.ToShortDateString()</td>
                <td>
                    @if (item.Estado == "Activo")
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </td>
                <td>@item.Correo</td>
                <td>@item.Username</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="ChangePassword" asp-route-id="@item.Id" class="btn btn-info btn-sm">Cambiar contraseña</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>



