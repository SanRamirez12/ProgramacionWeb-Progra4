@model Aeropost.Models.Usuario
@{
    ViewData["Title"] = "Cambiar contraseña";
}

<div class="clientes-container">
    <div class="clientes-wrapper">
        <h1 class="clientes-title">Cambiar contraseña</h1>

        <div class="modern-card">
            <div class="modern-card-body">
                <form asp-action="ChangePassword" method="post" class="client-form">

                    <!-- Resumen de errores de validación -->
                    <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                    <!-- Campo oculto -->
                    <input type="hidden" asp-for="Id" />

                    <!-- Grid del formulario -->
                    <div class="form-grid">

                        <!-- Nueva contraseña -->
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">
                                <span class="label-icon">🔐</span>
                                Nueva contraseña
                            </label>
                            <input asp-for="Password" class="form-input" type="password" autocomplete="new-password" placeholder="Ingrese la nueva contraseña" />
                            <span asp-validation-for="Password" class="field-validation"></span>
                        </div>

                        <!-- Confirmar contraseña -->
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <span class="label-icon">🔒</span>
                                Confirmar contraseña
                            </label>
                            <input asp-for="ConfirmPassword" class="form-input" type="password" autocomplete="new-password" placeholder="Confirme la nueva contraseña" />
                            <span asp-validation-for="ConfirmPassword" class="field-validation"></span>
                        </div>

                    </div>

                    <!-- Botones de acción -->
                    <div class="form-actions">
                        <a asp-action="Index" class="btn-cancel" style="text-decoration: none;">
                            <span class="btn-icon">↶</span>
                            Cancelar
                        </a>
                        <button type="submit" class="btn-submit">
                            <span class="btn-icon">💾</span>
                            Guardar
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



