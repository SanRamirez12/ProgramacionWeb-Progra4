@model Aeropost.Models.Usuario
@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="delete-container">
    <!-- Encabezado con título y alerta -->
    <div class="delete-header">
        <h1 class="section-title">Eliminar Usuario</h1>

        <div class="alert-warning">
            <div class="alert-icon">⚠</div>
            <div>
                <h4 style="margin: 0 0 0.5rem 0; font-weight: 600;">¿Está seguro que desea eliminar este usuario?</h4>
                <p style="margin: 0; opacity: 0.9;">Esta acción no se puede deshacer. Todos los datos del usuario serán eliminados permanentemente.</p>
            </div>
        </div>
    </div>

    <!-- Tarjeta con información del usuario -->
    <div class="modern-card" style="width: 100%; max-width: 800px;">
        <div class="modern-card-body">
            <h4 style="color: #1e3a8a; margin-bottom: 1.5rem; font-weight: 500;">Información del Usuario</h4>

            <div class="form-grid">
                <div class="form-group">
                    <label class="form-label">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </label>
                    <div style="padding: 0.875rem 1rem; background-color: #f8fafc; border: 2px solid #e5e7eb; border-radius: 8px; color: #374151;">
                        @Html.DisplayFor(model => model.Nombre)
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        @Html.DisplayNameFor(model => model.Cedula)
                    </label>
                    <div style="padding: 0.875rem 1rem; background-color: #f8fafc; border: 2px solid #e5e7eb; border-radius: 8px; color: #374151;">
                        @Html.DisplayFor(model => model.Cedula)
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        @Html.DisplayNameFor(model => model.Genero)
                    </label>
                    <div style="padding: 0.875rem 1rem; background-color: #f8fafc; border: 2px solid #e5e7eb; border-radius: 8px; color: #374151;">
                        @Html.DisplayFor(model => model.Genero)
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        @Html.DisplayNameFor(model => model.FechaRegistro)
                    </label>
                    <div style="padding: 0.875rem 1rem; background-color: #f8fafc; border: 2px solid #e5e7eb; border-radius: 8px; color: #374151;">
                        @Html.DisplayFor(model => model.FechaRegistro)
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        @Html.DisplayNameFor(model => model.Estado)
                    </label>
                    <div style="padding: 0.875rem 1rem; background-color: #f8fafc; border: 2px solid #e5e7eb; border-radius: 8px; color: #374151;">
                        @Html.DisplayFor(model => model.Estado)
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        @Html.DisplayNameFor(model => model.Correo)
                    </label>
                    <div style="padding: 0.875rem 1rem; background-color: #f8fafc; border: 2px solid #e5e7eb; border-radius: 8px; color: #374151;">
                        @Html.DisplayFor(model => model.Correo)
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        @Html.DisplayNameFor(model => model.Username)
                    </label>
                    <div style="padding: 0.875rem 1rem; background-color: #f8fafc; border: 2px solid #e5e7eb; border-radius: 8px; color: #374151;">
                        @Html.DisplayFor(model => model.Username)
                    </div>
                </div>
            </div>

            <!-- Botones de acción -->
            <div class="form-actions">
                <form asp-action="Delete" style="display: inline;">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn-action-delete" style="padding: 0.875rem 2rem; font-size: 1rem;">
                        Eliminar Usuario
                    </button>
                </form>

                <a asp-action="Index" class="btn-modern-secondary" style="text-decoration: none;">
                    Cancelar
                </a>
            </div>
        </div>
    </div>
</div>