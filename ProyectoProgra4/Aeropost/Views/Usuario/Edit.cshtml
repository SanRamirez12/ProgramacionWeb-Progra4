@model Aeropost.Models.Usuario
@{
    ViewData["Title"] = "Editar Usuario";
}

<h1>Editar Usuario</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- NECESARIO para el POST -->
            <input type="hidden" asp-for="Id" />

            <!-- Opcional: bloque de diagnóstico para ver qué invalida -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-warning">
                    <strong>Diagnóstico ModelState:</strong>
                    <ul>
                        @foreach (var kvp in ViewData.ModelState)
                        {
                            foreach (var err in kvp.Value.Errors)
                            {
                                <li><code>@kvp.Key</code>: @err.ErrorMessage</li>
                            }
                        }
                    </ul>
                </div>
            }

            <div class="form-group">
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cedula"></label>
                <input asp-for="Cedula" class="form-control" readonly />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Género</label><br />
                <input type="radio" asp-for="Genero" value="Masculino" /> Masculino
                <input type="radio" asp-for="Genero" value="Femenino" /> Femenino
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaRegistro"></label>
                <input asp-for="FechaRegistro" type="date" class="form-control" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Estado</label><br />
                <input type="radio" asp-for="Estado" value="Activo" /> Activo
                <input type="radio" asp-for="Estado" value="Inactivo" /> Inactivo
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Correo"></label>
                <input asp-for="Correo" class="form-control" type="email" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            @* No mostrar Username ni Password en EDIT *@

            <div class="form-group mt-3">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}

