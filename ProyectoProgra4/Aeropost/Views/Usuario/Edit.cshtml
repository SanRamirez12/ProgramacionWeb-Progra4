@model Aeropost.Models.Usuario

@{
    ViewData["Title"] = "Cambiar contraseña";
}

<h1>Cambiar contraseña</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Clave -->
            <input type="hidden" asp-for="Id" />

            <!-- Campos requeridos en el modelo, enviados como ocultos para que ModelState sea válido -->
            <input type="hidden" asp-for="Nombre" />
            <input type="hidden" asp-for="Cedula" />
            <input type="hidden" asp-for="Genero" />
            <input type="hidden" asp-for="FechaRegistro" />
            <input type="hidden" asp-for="Estado" />
            <input type="hidden" asp-for="Correo" />
            <input type="hidden" asp-for="Username" />

            <!-- NO mandar el password actual (nunca lo prellenes) -->
            <div class="form-group">
                <label asp-for="Password" class="control-label">Nueva contraseña</label>
                <input asp-for="Password" class="form-control" type="password" autocomplete="new-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label">Confirmar contraseña</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
