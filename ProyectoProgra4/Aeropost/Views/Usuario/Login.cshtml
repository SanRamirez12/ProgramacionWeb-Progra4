@* Modelo asociado a la vista *@
@model Aeropost.Models.Usuario

@{
    // Título de la página
    ViewData["Title"] = "Login";
}

@* Oculta el menú principal si existe *@
<script>
    var menu = document.getElementById("menu");
    if (menu) menu.style.display = "none";
</script>

<div class="login-container">
    <div class="login-card">
        <h1>Login</h1>
        <h4>Usuario</h4>

        <form asp-action="Login" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @Html.HiddenFor(model => model.Id)

            <input asp-for="Username" class="form-control" placeholder="Username" />
            <span asp-validation-for="Username" class="text-danger"></span>

            <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>

            <div class="form-actions">
                <input type="submit" value="Ingresar" class="btn-primary btn" />
                <input type="reset" value="Cancelar" class="btn-secondary btn" />
            </div>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert-error">
                <span class="alert-icon">⚠</span>
                <div>
                    <strong>No se pudo iniciar sesión</strong>
                    <span>@ViewBag.ErrorMessage</span>
                </div>
            </div>
        }
    </div>
</div>
