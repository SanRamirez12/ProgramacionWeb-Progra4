@model IEnumerable<Aeropost.Models.Cliente>
@{
    ViewData["Title"] = "Clientes";
}

<!-- Contenedor principal de clientes -->
<div class="clientes-container">
    <div class="clientes-wrapper">
        <h2 class="clientes-title">Clientes</h2>

        <!-- Buscar + acciones -->
        <div class="modern-card">
            <div class="modern-card-body">
                <form method="get" asp-action="Index" class="row g-3">
                    <div class="col-md-6">
                        <div class="input-group">
                            <input name="cedula"
                                   value="@ViewBag.CedulaFiltro"
                                   class="form-control modern-input"
                                   placeholder="Buscar por cédula" />
                            <button class="btn btn-modern-primary" type="submit">Buscar</button>
                            <a class="btn btn-modern-secondary" asp-action="Index">Limpiar</a>
                        </div>
                    </div>
                    <div class="col-md-6 d-flex justify-content-end gap-2">
                        <a class="btn btn-modern-success" asp-action="ReportePorTipo">
                            Reporte por tipo
                        </a>
                        <a class="btn btn-modern-outline-success" asp-action="Create">
                            Agregar cliente
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Tabla -->
        <div class="modern-card">
            <div class="table-responsive">
                <table class="table modern-table mb-0">
                    <thead>
                        <tr>
                            <th>Cédula</th>
                            <th>Nombre</th>
                            <th>Tipo</th>
                            <th>Correo</th>
                            <th>Teléfono</th>
                            <th class="text-end" style="width:200px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model)
                        {
                            <tr>
                                <td>@c.Cedula</td>
                                <td>@c.Nombre</td>
                                <td>@c.Tipo</td>
                                <td>@c.Correo</td>
                                <td>@c.Telefono</td>
                                <td class="text-end">
                                    <a class="btn btn-action-edit me-1"
                                       asp-action="Edit" asp-route-id="@c.Id">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>
                                    <a class="btn btn-action-delete"
                                       asp-action="Delete" asp-route-id="@c.Id">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>