@model Aeropost.Models.Cliente

@{
    ViewData["Title"] = "Agregar cliente";
}

<div class="bitacora-container">
    <!-- Sección de encabezado -->
    <div class="welcome-section">
        <h1 class="welcome-title">Agregar Cliente</h1>
    </div>

    <!-- Contenido principal -->
    <div class="main-content-card">
        <div class="form-container">
            <form asp-action="Create" method="post" class="client-form">
                @Html.AntiForgeryToken()

                <!-- Resumen de errores de validación -->
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <!-- Grid de campos del formulario -->
                <div class="form-grid">
                    <!-- Campo Nombre -->
                    <div class="form-group">
                        <label asp-for="Nombre" class="form-label">
                            <span class="label-icon">👤</span>
                            Nombre
                        </label>
                        <input asp-for="Nombre" class="form-input" placeholder="Nombre completo" />
                        <span asp-validation-for="Nombre" class="field-validation"></span>
                    </div>

                    <!-- Campo Cédula -->
                    <div class="form-group">
                        <label asp-for="Cedula" class="form-label">
                            <span class="label-icon">🆔</span>
                            Cédula
                        </label>
                        <input asp-for="Cedula" class="form-input" placeholder="123456789" />
                        <span asp-validation-for="Cedula" class="field-validation"></span>
                    </div>

                    <!-- Campo Tipo -->
                    <div class="form-group">
                        <label asp-for="Tipo" class="form-label">
                            <span class="label-icon">📋</span>
                            Tipo
                        </label>
                        <select asp-for="Tipo" class="form-select">
                            <option value="">-- Seleccione --</option>
                            <option value="Regular">Regular</option>
                            <option value="Frecuente">Frecuente</option>
                            <option value="Suspendido">Suspendido</option>
                        </select>
                        <span asp-validation-for="Tipo" class="field-validation"></span>
                    </div>

                    <!-- Campo Correo -->
                    <div class="form-group">
                        <label asp-for="Correo" class="form-label">
                            <span class="label-icon">📧</span>
                            Correo
                        </label>
                        <input asp-for="Correo" class="form-input" type="email" placeholder="correo@dominio.com" />
                        <span asp-validation-for="Correo" class="field-validation"></span>
                    </div>

                    <!-- Campo Dirección -->
                    <div class="form-group form-group-wide">
                        <label asp-for="Direccion" class="form-label">
                            <span class="label-icon">🏠</span>
                            Dirección
                        </label>
                        <input asp-for="Direccion" class="form-input" placeholder="Dirección de entrega" />
                        <span asp-validation-for="Direccion" class="field-validation"></span>
                    </div>

                    <!-- Campo Teléfono -->
                    <div class="form-group">
                        <label asp-for="Telefono" class="form-label">
                            <span class="label-icon">📞</span>
                            Teléfono
                        </label>
                        <input asp-for="Telefono" class="form-input" type="tel" placeholder="8888-8888" />
                        <span asp-validation-for="Telefono" class="field-validation"></span>
                    </div>
                </div>

                <!-- Botones de acción -->
                <div class="form-actions">
                    <button type="submit" class="btn-submit">
                        
                        Crear Cliente
                    </button>
                    <a asp-action="Index" class="btn-cancel">
                        
                        Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}