@model IEnumerable<Aeropost.Models.Cliente>
@{
    ViewData["Title"] = "Reporte de clientes por tipo";
    string sel = ViewBag.TipoSeleccionado as string ?? "";
}

<h2 class="mb-3">Reporte de clientes por tipo</h2>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <form method="post" asp-action="ReportePorTipo" class="row g-2">
            @Html.AntiForgeryToken()
            <div class="col-md-4">
                <select name="tipo" class="form-select">
                    <option value="" selected="@(string.IsNullOrEmpty(sel) ? "selected" : null)">Todos</option>
                    <option value="Regular" selected="@(sel == "Regular" ? "selected" : null)">Regular</option>
                    <option value="Frecuente" selected="@(sel == "Frecuente" ? "selected" : null)">Frecuente</option>
                    <option value="Suspendido" selected="@(sel == "Suspendido" ? "selected" : null)">Suspendido</option>
                </select>
            </div>
            <div class="col-md-auto">
                <button type="submit" class="btn btn-primary">Generar</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

<p>
    Tipo seleccionado: <strong>@(string.IsNullOrEmpty(sel) ? "Todos" : sel)</strong>
    — Total: <strong>@ViewBag.Total</strong>
</p>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Cédula</th>
                        <th>Nombre</th>
                        <th>Tipo</th>
                        <th>Correo</th>
                        <th>Teléfono</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.Cedula</td>
                            <td>@c.Nombre</td>
                            <td>@c.Tipo</td>
                            <td>@c.Correo</td>
                            <td>@c.Telefono</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
