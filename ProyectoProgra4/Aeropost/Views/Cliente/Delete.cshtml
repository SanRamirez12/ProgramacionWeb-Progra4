@model Aeropost.Models.Cliente
@{
    ViewData["Title"] = "Eliminar cliente";
}

<h1 class="mb-3">Eliminar cliente</h1>

<div class="alert alert-warning">
    <strong>¿Está seguro que desea eliminar este cliente?</strong>
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <h5 class="mb-1">Cliente</h5>
                <div><strong>Nombre:</strong> @Model.Nombre</div>
                <div><strong>Cédula:</strong> @Model.Cedula</div>
                <div><strong>Tipo:</strong> @Model.Tipo</div>
            </div>
            <div class="col-md-6">
                <h5 class="mb-1">Contacto</h5>
                <div><strong>Correo:</strong> @Model.Correo</div>
                <div><strong>Teléfono:</strong> @Model.Telefono</div>
                <div><strong>Dirección:</strong> @Model.Direccion</div>
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-flex gap-2">
    @Html.AntiForgeryToken()
    <!-- Id oculto como pediste -->
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
