@model ExamenProgra4.Models.Chofer

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Chofer de Uber Costa Rica</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CedulaIdentidad" class="control-label">Cédula de Identidad:</label>
                <input asp-for="CedulaIdentidad" type="number" class="form-control" required/>
                <span asp-validation-for="CedulaIdentidad" class="text-danger"></span>
            </div><br />

            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre del chofer:</label>
                <input asp-for="Nombre" type="text" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div><br />

            <div class="form-group">
                <label asp-for="FechaRegistro" class="control-label">Fecha de Registro:</label>
                <input asp-for="FechaRegistro" type="date" class="form-control" required />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div><br />

            <div class="form-group col-md-6">
                <label asp-for="Calificacion" class="control-label">Calificación:</label><br />
                @for (int i = 1; i <= 5; i++)
                {
                    <label class="mr-2">
                        <input type="radio" asp-for="Calificacion" required value="@i" /> @i
                    </label>
                }
                <span asp-validation-for="Calificacion" class="text-danger"></span>
            </div><br />

            <div class="form-group">
                <label asp-for="Categoria" class="control-label">Categoría de Uber:</label>
                <select asp-for="Categoria" class="form-control" required>
                    <option>UberX</option>
                    <option>UberXL</option>
                    <option>Comfort</option>
                    <option>UberBlack</option>
                </select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div><br />

            <div class="form-group">
                <label asp-for="ComisionGenerada" class="control-label"> Comisión Generada:</label>
                <input asp-for="ComisionGenerada" type="number" class="form-control" step="0.01" required />
                <span asp-validation-for="ComisionGenerada" class="text-danger"></span>
            </div><br />

            <div class="form-group">
                <label class="control-label">Restricciones:</label>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-check">
                            <input asp-for="NoMascotas" class="form-check-input" type="checkbox"  />
                            <label class="form-check-label" asp-for="NoMascotas">No Mascotas</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="NoMaletasGrandes" class="form-check-input" type="checkbox"  />
                            <label class="form-check-label" asp-for="NoMaletasGrandes">No Maletas Grandes</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input asp-for="NoNinos" class="form-check-input" type="checkbox"  />
                            <label class="form-check-label" asp-for="NoNinos">No Niños</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="NoViajesNocturnos" class="form-check-input" type="checkbox"  />
                            <label class="form-check-label" asp-for="NoViajesNocturnos">No Viajes Nocturnos</label>
                        </div>
                    </div>
                </div>
            </div><br />

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <input type="reset" value="Restablecer" class="btn btn-warning ml-2" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver:</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
